<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<p>Created: <%= @article.created_at.to_date %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <!--<li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>-->
  <li><%= link_to "Back", articles_path %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>


<div id="options" data-controller="visibility">
  <button data-action="visibility#toggleTargets">Add a comment</button>
  <div data-visibility-target="hideable" hidden>
    <%= render 'comments/form' %>
  </div>
</div>

